{
	"pins": {
		"ins": {
			"in": [ "load:file" ]
		},
		"outs": {
			"out": [ "save:out" ]
		}
	},
	"nodes": {
		"load": {
			"node": "phly/img/load",
			"pins": {
				"out": "scale:in"
			}
		},
		"scale": {
			"node": "phly/img/scale",
			"cfg": {
				"width": "(${srcw}*0.5) + 40",
				"height": "(${srch}*0.25) + 10"
			},
			"pins": {
				"out": "save:in"
			}
		},
		"save": {
			"node": "phly/img/save",
			"cfg": {
				"file": "${srcdir}-out/${srcbase}${srcext}"
			}
		}
	}
}