{
	"nodes": {
		"file": {
			"node": "phly/text",
			"cfg": {
				"value":  "./dog.jpg",
				"env": "PHLY_TEXT",
				"cla": "name"
			},
			"pins": {
				"0": "load:file"
			}
		},
		"load": {
			"node": "phly/img/load",
			"pins": {
				"0": "scale:0"
			}
		},
		"scale": {
			"node": "phly/img/scale",
			"cfg": {
				"width": "(${w}*0.5) + 40",
				"height": "(${h}*0.25) + 10"
			},
			"pins": {
				"0": "save:0"
			}
		},
		"save": {
			"node": "phly/img/save",
			"cfg": {
				"file": "${srcdir}${srcbase}-out${srcext}"
			}
		}
	}
}